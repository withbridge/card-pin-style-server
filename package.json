{
  "name": "bridge-card-pin-style-server",
  "version": "1.0.0",
  "description": "Server for easily editing styles for Bridge PIN forms",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:sample": "STYLE=sample nodemon server.js",
    "dev:partner": "STYLE=default-partner nodemon server.js",
    "clean": "rm -rf dist/",
    "build": "mkdir -p dist/css && npx sass --no-source-map styles:dist/css",
    "build:sample": "mkdir -p dist/css && npx sass --no-source-map styles/sample.scss:dist/css/sample.css",
    "styles": "npm run clean && npm run build && echo 'All styles compiled to dist/css directory'"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "connect-livereload": "^0.6.1",
    "express": "^4.18.2",
    "livereload": "^0.9.3",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
